@model CargoDispath.Models.ForgotPasswordModel
@{
    ViewBag.Title = "Восстановление пароля";
}
<div class="body-container">
    <div class="round-rectangle log">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center">
                    <h2 class="section-title">Восстановление пароля</h2>
                </div>
            </div>
            <form action="/Account/ForgotPassword" method="post">
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="row">
                        <div class="col-md-4 col-md-offset-1">
                            <div class="form-group">
                                <label>Электронный адрес</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                                    <input type="email" class="input-group input-margin-bottom form-control" name="Email" required value="@ViewBag.email"/>
                                </div>
                                <span class="error">@Html.ValidationMessageFor(model => model.Email)</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-md-offset-1">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Восстановить пароль</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

